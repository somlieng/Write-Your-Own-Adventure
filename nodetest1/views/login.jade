html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    // Enable Mobile view with viewport meta tag
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // Title for the page
    title Login to Story Tree
    // Bootstrap Framework Dependencies
    // Latest compiled and minified CSS
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css', integrity='sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ==', crossorigin='anonymous')
    // Latest compiled and minified JavaScript
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js', integrity='sha512-K1qjQ+NcF2TYO/eI3M6v8EiNYZfA95pQumfvcVrTHtwQVDG+aHRqLi/ETn2uB+1JqwYqVG3LIvdm9lj6imS/pQ==', crossorigin='anonymous')
    link(href='login.css', rel='stylesheet')
    script(type='text/javascript', src='https://code.jquery.com/jquery-2.1.1.min.js')
    body(background='trees.jpg')
    .container
      .row.vertical-center-row
        .text-center.col-md-4.col-md-offset-4
          // Adapted from sign in template form Bootstrap's example page
          #signin-panel.panel.panel-default
            #panel-bg.panel-body
              form.form-signin(name='adduser', method='post', action='/adduser')
                h2.form-signin-heading Please sign in
                label.sr-only(for='inputEmail') Email address
                input#inputEmail.form-control(type='email', placeholder='Email address', required='', autofocus='', name='useremail')
                label.sr-only(for='inputPassword') Password
                input#inputPassword.form-control(type='password', placeholder='Password', required='', name='userpassword')
                button#signinButton.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
    // /container
